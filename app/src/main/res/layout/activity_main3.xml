<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar_main_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/top_bar_main3"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:theme="@style/ToolbarTheme"
        app:title="Notes"
        app:titleMargin="10dp"
        app:titleTextColor="@color/white"
        android:background="@color/blue" />
    <EditText
        android:id="@+id/ed_title_3"
        app:layout_constraintTop_toBottomOf="@id/top_bar_main_3"
        android:layout_width="match_parent"
        android:layout_marginEnd="20sp"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:gravity="top|start"
        android:lines="5"
        android:minLines="1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:layout_marginTop="30dp"
        android:inputType="textMultiLine"
        android:layout_marginStart="20sp"
        android:textSize="25sp"
        android:fontFamily="@font/google_sans_medium"
        android:textColor="?attr/editTextColor"/>
    <EditText
        android:id="@+id/ed_content_3"
        android:layout_width="match_parent"
        android:layout_marginEnd="20sp"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:lines="20"
        android:minLines="5"
        android:gravity="top|start"
        android:layout_height="wrap_content"
        android:hint="Note something down"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20sp"
        android:textSize="16sp"
        android:fontFamily="@font/google_sans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_title_3"
        android:textColor="?attr/editTextColor" />
</androidx.constraintlayout.widget.ConstraintLayout>